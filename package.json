{
  "name": "react-chart-lite",
  "version": "1.0.1",
  "description": "A lightweight and simple library for creating beautiful bar, pie, and radar charts in React applications.",
  "author": {
    "name": "Omer Faruk Gurbuz",
    "email": "mr.gurbuzf@gmail.com",
    "url": "https://github.com/omerfarukgurbuz"
  },
  "license": "MIT",
  "type": "module",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/omerfarukgurbuz/react-chart-lite.git"
  },
  "bugs": {
    "url": "https://github.com/omerfarukgurbuz/react-chart-lite/issues"
  },
  "homepage": "https://github.com/omerfarukgurbuz/react-chart-lite#readme",
  "keywords": [
    "react",
    "charts",
    "chart",
    "graph",
    "visualization",
    "data-visualization",
    "bar-chart",
    "pie-chart",
    "radar-chart",
    "react-component",
    "react-library",
    "lightweight",
    "typescript",
    "react-chart-lite"
  ],
  "peerDependencies": {
    "react": "^18 || ^19",
    "react-dom": "^18 || ^19"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "@types/react": "^19.1.12",
    "@types/react-dom": "^19.1.9",
    "tsc-alias": "^1.8.16",
    "typescript": "^5.9.2"
  },
  "scripts": {
    "build": "npm run clean && tsc && tsc-alias && npm run copycss && npm run stripmaps",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run build",
    "copycss": "node scripts/copy-scss.cjs",
    "stripmaps": "find dist -type f -name \"*.map\" -delete",
    "type-check": "tsc --noEmit",
    "test": "echo \"No tests yet\" && exit 0",
    "dev:examples": "npm --prefix examples/demo-vite run dev",
    "dev:example:local": "cross-env RCL_LOCAL=1 npm --prefix examples/demo-vite run dev",
    "dev:example:package": "cross-env RCL_LOCAL=0 npm --prefix examples/demo-vite run dev",
    "setup:examples": "npm --prefix examples/demo-vite install"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "sideEffects": [
    "**/*.css"
  ],
  "packageManager": "yarn@1.22.22+sha512.a6b2f7906b721bba3d67d4aff083df04dad64c399707841b7acf00f6b133b7ac24255f2652fa22ae3534329dc6180534e98d17432037ff6fd140556e2bb3137e"
}
